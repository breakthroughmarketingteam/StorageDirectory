<% declare_content_for %>
<%= js_plugins 'excanvas.min', 'jquery.jqplot.min', 'jqplot.dateAxisRenderer.min', 'jqplot.canvasTextRenderer.min', 'jqplot.canvasAxisTickRenderer.min', 'jqplot.highlighter.min', 'jqplot.cursor.min' %>
<%= plugin_stylesheets 'jquery.jqplot' %>

<h1 class="hidden">Search results listing</h1>
<a name="top" id="top"></a>

<div id="type-one-r-col">
  <div id="type-three-r-col-in">
    
    <div id="sl-header">
      <h2>Account Overview</h2>
    </div>
    
    <div id="ov-page-cnt">

      <div id="ov-top">
		<%= display_message flash %>
        <ul id="ov-top-list">
			<li><%= @client.name %></li>
          	<li>Account #: <span id="client_id"><%= @client.id %></span></li>
          	<li>
				Number of listings: <span id="listings_size"><%= @client.listings.size %></span>
				<%= hidden_field_tag 'issn_enabled', @client.issn_enabled? %>
		  	</li>
        </ul>
      </div>
     
	<%= render_hints_for :reports %>
      <div id="ov-reports" class="hideable">
        <div id="ov-item-head">
          <h3><span>Reports</span></h3>
        </div>
        <div id="ov-reports-cnt" class="Xtabular_content">
			<!--<ul class="tabular">
				<li><%= link_to 'Overview', '#', :rel => 'stats_graph' %></li>
				<li><%= link_to 'Clicks', '#', :rel => 'stats_graph' %></li>
				<li><%= link_to 'Impressions', '#', :rel => 'stats_graph' %></li>
				<li><%= link_to 'All Time', '#', :rel => 'stats_graph' %></li>
			</ul>-->
			<div id="stats_graph" class="Xtab_content"></div>
        </div>
      </div>
		
	<%= render_hints_for :facilities %>
      <div id="ov-units" class="hideable">
		<div id="ov-units-head">
			<h3><span>Facilities</span></h3>
			<% if @client.listings.size > 1 %><p id="address_sort"><a href="#">Sort by address</a></p><% end %>
			<%= ajax_loader %>
			<a href="#" id="add_fac" class="btn" title="Add a new facility">New</a>
        </div>
        
        <div id="client_listing_box">
          <% unless @listings.empty? %>
            <div id="rslt-list-bg">
              <%= render :partial => 'listings/listing', :collection => @listings, :locals => { :owned => true } %>
              <%= will_paginate @listings %>
            </div>
          <% end %>
        </div>
      </div>

	<%= render_hints_for :services %>
      <div id="ov-services" class="hideable">
        <div id="ov-item-head">
          <h3><span>Services</span></h3>
        </div>
        <div id="ov-services-cnt">
			<div>
				<ul>
					<li><%= link_to "<span>#{@client.issn_enabled? ? 'Reservations Log' : 'Activate Reservations'}</span>", '#reservations', :id => 'reservations' %></li>
					<li><%= link_to "<span>#{@client.call_tracking_enabled? ? 'Call Log' : 'Activate Call Tracking'}</span>", '#calls', :id => 'calls' %></li>
					<li><%= link_to '<span>Request Log</span>', '#calls', :id => 'calls' %></li>
				</ul>
			</div>
        </div>
      </div>

	<%= render_hints_for :owner_info %>
 	  <div id="ov-info" class="instant_form hideable">
        <div id="ov-item-head">
          <h3><span>Billing Info</span><span class="right">Mailing Address</span></h3>

  	      <%= ajax_loader %>
          <a id="client_edit_contact" class="btn instant_submit" href="#">Edit</a></p>
        </div>
		
		<%= render :partial => 'owner_info', :locals => { :client => @client } %>
      </div>
 
	<%= render_hints_for :settings %>
      <div id="ov-settings" class="hideable">
        <div id="ov-item-head">
        	<h3><span>Settings</span></h3>

			<%= ajax_loader %>
	        <a id="client_edit_settings" class="btn" href="#">Update</a></p>
        </div>
        <div id="ov-settings-cnt" class="framed">
          	
			<% form_for @client, :id => 'client_settings' do |f| %>
				<table cellspacing="0" cellpadding="0">
					<tr>
						<th title="Setup where and when to send reports"><p>Email reports: </p></th>
						<td id="email_reports_settings">
							<% f.fields_for :settings, @settings do |s| %>
								<p>
									<%= s.text_field :reports_recipients, :class => 'hintable text', :title => 'Reports Recipients' %>
									<span class="note">Separate multiple emails by comma, or delete to stop email reports</span>
								</p>
							<% end %>
						</td>
					</tr>
					<tr>
						<th title="Show or hide all the helpful hint boxes"><p>Hint boxes: </p></th>
						<td id="user_hint_toggles">
							<p><%= radio_button_tag 'user_hints', 'open' %> Show</p>
							<p><%= radio_button_tag 'user_hints', 'hide' %> Hide</p>
						</td>
					</tr>
					<% f.fields_for :listing_description, @listing_description do |lf| %>
						<tr>
							<th title="Show this description on all your facilities pages"><p>Global description: </p></th>
							<td id="listing_description">
								<%= lf.text_area :description, :class => 'hintable', :title => 'Draw your customers in with a personable introduction to your company. Whatever you write in here will appear on your facilities\' pages. You can also edit this description for each individual facility by going to its Manage page above.' %>
							</td>
						</tr>
						<tr>
							<th><p>Apply description to:</p></th>
							<td>
								<p>
									<%= lf.radio_button :show_in, 'all' %><%= lf.label :show_in, 'None' %> 
									<%= lf.radio_button :show_in, 'all' %><%= lf.label :show_in, 'All Listings' %> 
									<%= lf.radio_button :show_in, 'all' %><%= lf.label :show_in, 'Only listings with no description' %>
								</p>
							</td>
						</tr>
					<% end %>
				</table>
				<div class="hide">
					<%= f.hidden_field :upsets %><%= f.submit %>
				</div>
			<% end %>
			
        </div>
      </div>
      
      <div id="sl-footer"></div>
      
    </div>
    <div class="clear"></div>

  </div>
</div>