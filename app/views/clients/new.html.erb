								</div>

								<div id="email_check">
									<%= f.label :email, 'Contact Email:', :class => 'email-label' %>
									<%= ajax_loader %><%= link_to 'Confirm Availability', '#', :id => 'chk_avail', :class => 'hide'  %>
									<%= f.text_field :email, :class => 'email' %>
					
								</div>

								<div id="city">
									<label class="label">City:</label>
									<%= text_field_tag 'listing[city]', nil, :class => 'required autocomplete param_filled', :param => 'listing[city]', :rel => 'UsCity_names|3' %>
								</div>
								<div id="state">
									<label class="label">State:</label>
									<%= text_field_tag 'listing[state]', nil, :class => 'required autocomplete param_filled', :param => 'listing[state]', :rel => 'States_abbrevs|1', :maxlength => 2 %>
								</div>

								<div id="submit_wrap">
									<a id="signup_button" class="search-button popper" href="#">Sign Up</a>
