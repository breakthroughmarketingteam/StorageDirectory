<div id="owner_info_wrap">
	<div class="ov-info-cnt">
		<ul>
			<li>
				<span class="label">Name:</span>
				<span class="value" rel="billing_info"><%= client.active_billing_info.name if client.has_billing_info? %></span>
			</li>
			<li>
				<span class="label">Address:</span>
				<span class="value" rel="billing_info"><%= client.active_billing_info.address if client.has_billing_info? %></span>
			</li>
			<li>
				<span class="label">Phone:</span>
				<span class="value" validate="numeric_phone" rel="billing_info"><%= client.active_billing_info.phone if client.has_billing_info? %></span>
			</li>
			<li>
				<span class="label">Card Type:</span>
				<span class="value" rel="billing_info"><%= client.active_billing_info.card_type if client.has_billing_info? %></span>
			</li>
			<li>
				<span class="label">Card Number:</span>
				<span class="value" rel="billing_info"><%= client.active_billing_info.obscured_card_number if client.has_billing_info? %></span>
			</li>
		</ul>
	</div>
	<div class="ov-info-cnt">
		<ul>
			<li>
				<span class="label">Name:</span>
				<span class="value" rel="mailing_address"><%= client.active_mailing_address.name if client.has_mailing_address? %></span>
			</li>
			<li>
				<span class="label">Company:</span>
				<span class="value" rel="mailing_address"><%= client.active_mailing_address.company if client.has_mailing_address? %></span>
			</li>
			<li>
				<span class="label">Address:</span>
				<span class="value" rel="mailing_address"><%= client.active_mailing_address.address if client.has_mailing_address? %></span>
			</li>
			<li>
				<span class="label">Phone:</span>
				<span class="value" validate="numeric_phone" rel="mailing_address"><%= client.active_mailing_address.phone if client.has_mailing_address? %></span>
			</li>
			<li>
				<span class="label">Email:</span>
				<span class="value" rel="mailing_address"><%= client.active_mailing_address.email if client.has_mailing_address? %></span>
			</li>
		</ul>
	</div>


	<% form_for client, :html => { :id => "client_edit_#{client.id}", :class => 'hidden' } do |f| %><% end %>
</div>