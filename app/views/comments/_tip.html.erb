<div class="blog-lock">
	<div class="tip_in">
		<a class="tip_anchor" name="<%= tip.title.parameterize %>"></a>
		<h3><%= link_to tip.title, post_url(tip) %></h3>
		<p class="updated_at hide"><%= tip.updated_at.to_i %></p>
		<div class="stack"><%= tip.content_teaser %></div>

		<ul>
			<li>Rating&nbsp;&nbsp;&nbsp;</li>
			<li class="five-star"><%#= ratings_for tip, :dimension => :usefulness, :small => true %></li>
			<li class="share_label">Share: </li>
			<li class="share">
				<a rel="nofollow" href="#"class="facebook_share"><span class="hide">Facebook</span></a>
				<a rel="nofollow" href="#" target="_blank" class="twitter"><span class="hide">Twitter</span></a>
				<a rel="nofollow" href="#" target="_blank" class="delicious"><span class="hide">Delicious</span></a>
				<a rel="nofollow" href="#" target="_blank" class="socialmediaone"><span class="hide">Another</span></a>
				<a rel="nofollow" href="#" target="_blank" class="socialmediatwo"><span class="hide">Another</span></a>
				<a rel="nofollow" href="#" target="_blank" class="socialmediathree"><span class="hide">Another</span></a>
			</li>
			<% if tip.respond_to? :display_tag_list_with_links %>
				<li class="tags">Tags: <%= tip.display_tag_list_with_links %></li>
			<% end %>
		</ul>
	</div>
</div>