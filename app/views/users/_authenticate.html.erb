<% form_tag authenticate_user_path(is_admin? ? user : current_user), :id => 'auth_yourself' do %>
	<p>For added security, please enter your password to continue.</p>
	<div>
		<input type="password" name="auth[password]" class="required" />
		<a href="#" id="confirm_yes" class="btn">Confirm</a>
		<input type="submit" name="commit" class="hide" />
	</div>
<% end %>