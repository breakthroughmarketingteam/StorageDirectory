<fieldset>
	<div class="stack">
		<%= f.label :title %>
		<div class="shadow_wrap">
			<%= f.text_field :title, :class => 'required' %>
		</div>
	</div>
	
	<div class="stack">
		<%= f.label :description, nil, :class => 'block_label' %>
		<div class="shadow_wrap">
			<%= f.text_area :description, :class => 'small_textarea' %>
		</div>
	</div>
	
	<div class="stack">
		<%= f.label :content, nil, :class => 'block_label' %>
		<div class="shadow_wrap">
			<%= f.text_area :content, :class => 'wysiwyg' %>
		</div>
	</div>
	
	<div class="stack uncollapse">
	  	<%= f.label :place, 'Place to show' %>
		<div class="shadow_wrap">
			<%= f.select :place, _user_hint_places, { :include_blank => true }, :class => 'required', :title => 'Choose the place on the account control panel to show this hint' %>
		</div>
	</div>
	
</fieldset>