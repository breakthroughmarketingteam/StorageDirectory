<% if is_admin? && not_on_home_page %>
<% path = new_model_path(controller_name, :user_id => params[:user_id]) %>
<div class="left right_space">
	<div class="buttons grey_buttons">
		<% case action_name when 'index', 'show', 'update', 'create' %>
			<%= link_to model_crud_title('new', controller_name), path, :id => path.parameterize %>
			<%= link_to 'Back', model_index_path(controller_name), :class => 'go_back' %>
		<% when 'new', 'edit'  %>
			<%= link_to 'Back', model_index_path(controller_name), :class => 'go_back' %>
		<% end %>
	</div>
</div>
<% end %>