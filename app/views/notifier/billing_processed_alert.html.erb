<p>
	Client billing information has been updated and processed.
</p>
<table cellpadding="0" cellspacing="0">
	<tr>
		<td width="20"></td>
		<td width="340" valign="top" halign="left">
			<p>
				<% if @billable.is_a? Listing %>
					<strong>Facility Name:</strong><br>
					<a href="https://<%= $root_domain %>/listings/<%= @billable.id %>/profile" style="color:green;"><%= @billable.title %></a>
				<% else %>
					<strong>Name:</strong><br>
					<a href="https://<%= $root_domain %>/clients/<%= @billable.id %>/edit" style="color:green;"><%= @billable.name %></a>
				<% end %>
			</p>
			<p>
				<strong>Amount:</strong><br>
				<%= @invoice.tran_amount %> for <%= @billable.is_a?(Listing) ? @billable.title : pluralize(@billable.tier_multiple, 'listing') %>
			</p>
			<p>
				<strong>Recurring:</strong><br>
				Monthly on this date
			</p>
			
			<% @invoice.attributes.each_pair do |name, val| %>
				<p>
					<strong><%= name.titleize %></strong><br>
					<%= val %>
				</p>
			<% end %>
		</td>
	</tr>
</table>