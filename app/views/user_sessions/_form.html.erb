<div id="login_page">
	<% form_for (@user_session ||= UserSession.new) do |f| %>
		<fieldset>
			<h2>Login to your account</h2>
			<%= display_message flash %>
			<div class="stack i">
				<%= f.label :email, nil, :class => 'hidden' %>
				<div class="shadow_wrap">
	  			<%= f.text_field :email, :class => 'email hintable', :title => 'Your Email Address' %>
				</div>
			</div>
		
			<div class="stack i">
	  		<%= f.label :password, nil, :class => 'hidden' %>
				<div class="shadow_wrap">
			  	<%= f.password_field :password, :class => 'required hintable', :title => 'Password' %>
				</div>
			</div>
		
			<div class="stack region">
				<%= f.check_box :remember_me %><%= f.label :remember_me %>
				<%= ajax_loader %>
				<%= f.submit 'Login' %>
			</div>
			
			<div class="stack">
				<%= link_to 'Forgot Password', new_password_reset_path, :id => 'forgot_pass_link' %>
			</div>
		
		</fieldset>
	<% end %>
</div>