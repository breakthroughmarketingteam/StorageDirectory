<div id="narrow-box">
	<div id="sb-title">
		<h2>Narrow Your Search</h2>
	</div>
	<!--<form id="narrow_results_form" action="/self-storage" class="silent" method="get" name="narrow_results_form">-->
	<% form_for @search, :html => { :id => 'narrow_results_form', :class => 'silent' } do |f| %>
		<div id="offset_search_box">
			<%= f.text_field :query, :value => @prev_search.try(:zip_or_city_and_state), :class => 'hintable autocomplete required', :title => 'Zip Code, City, or Street Address', :rel => 'UsCity_namesNstate|3' %>
			<%= reverse_captcha %>
			<%= f.submit 'Locate', :class => 'grn_btn' %>
		</div>
		<div id="advanced_opts">
			<div id="type_select">
				<%= f.label :storage_type, 'Type:' %>
				<%= f.select :storage_type, @facility_features, :selected => @prev_search.try(:storage_type) %>
			</div>
			
			<div id="size_option">
				<div id="size_picker">
					<%= image_tag @unit_size_icons.first.icon.url rescue 'Missing Size Icon' %>
				</div>
				<div>
					<%= f.label :unit_size, 'Unit Size:' %>
					<%= select_tag_for_unit_size_icons 'search[unit_size]', @prev_search.try(:unit_size) %>
				</div>
			</div>
			
			<div id="distance_slider">
				<%= f.label :within %>
				<div id="slide_wrap">
					<img class="arrow" src="/images/ui/storagelocator/less-arrow.png" alt="less">
					<div class="advanced_slider">
						<div id="slide_bg"></div>
					</div>
					<img class="arrow" src="/images/ui/storagelocator/more-arrow.png" alt="more"> 
					<%= f.hidden_field :within, :value => @prev_search.try(:within), :class => 'slider_val', :disabled => true %>
				</div>
				<%= label_tag 'miles.', nil, :class => 'right' %>
			</div>
			
			<div id="unit_features" class="hide">
				<p><%= link_to 'Features', { :anchor => 'show_collapseable_unit_features' }, :class => 'toggle_action toggle_right', :title => 'Show Features' %></p>
				
				<div class="collapseable">
					<% @unit_features.each do |feature| %>
					<div class="selectable_wrap">
						<div class="selectable">
							<%= check_box_tag 'search[features]', feature %>
						</div>
						<%= label_tag feature %>
					</div>
					<% end %>
				</div>
			</div>
			
			<div id="sub_submit">
				<%= f.submit 'Locate', :class => 'grn_btn' %>
			</div>
			
		</div>
	<% end %>
</div>
