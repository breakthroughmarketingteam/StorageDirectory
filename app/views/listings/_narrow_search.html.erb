<div id="narrow-box">
	<div id="sb-title">
		<h2>Narrow Your Search</h2>
	</div>
	<!--<form id="narrow_results_form" action="/self-storage" class="silent" method="get" name="narrow_results_form">-->
	<% form_for @search, :html => { :id => 'narrow_results_form', :class => 'silent' } do |f| %>
		<div id="offset_search_box">
			<%= f.text_field :query, :value => @prev_search.try(:full_location_if_zip), :class => 'hintable autocomplete required', :title => 'Zip Code, City, or Street Address', :rel => 'UsCity_namesNstate|3' %>
			<%= reverse_captcha %>
			<%= f.submit 'Locate', :class => 'grn_btn' %>
		</div>
		<div id="advanced_opts">
			<div id="type_select">
				<%= f.label :storage_type, 'Type:' %>
				<%= f.select :storage_type, @facility_features, :selected => @prev_search.try(:storage_type) %>
			</div>
			
			<div id="size_option">
				<div id="size_picker">
					<%= image_tag @unit_size_icons.first.icon.url rescue 'Missing Size Icon' %>
				</div>
				<div>
					<%= f.label :unit_size, 'Unit Size:' %>
					<%= select_tag_for_unit_size_icons 'search[unit_size]', (@prev_search.try(:unit_size) || $_listing_search_distance) %>
				</div>
			</div>
			
			<div id="distance_btns">
				<%= f.label :within,"Distance:" %>
				<div class="uncollapse">
					<% @distance_options.each do |distance| %>
						<div class="radio_wrap">
							<%= f.label "within_#{distance}", "#{distance}" %>							
							<div class="radio_select">
								<%= radio_button_tag 'search[within]', distance, (@prev_search.try(:within) || $_listing_search_distance).to_i == distance.to_i %>
							</div>
						</div>
					<% end %>
				</div>
				<%= label_tag 'miles.', nil, :class => 'right' %>
			</div>
			
			<div id="unit_features" class="unitfeatures">
				<p><%= link_to 'Select Features', { :anchor => 'show_.collapseable_.unitfeatures' }, :class => 'toggle_action toggle_right', :title => 'Show Features' %></p>
				
				<ul class="collapseable hide">
					<% @unit_features.each do |feature| %>
					<li class="selectable_wrap">
						<div class="selectable">
							<%= check_box_tag 'search[features]', feature %>
						</div>
						<%= label_tag feature %>
					</li>
					<% end %>
				</ul>
			</div>
			
			<div id="sub_submit">
				<%= f.submit 'Locate', :id => 'search_submit2', :class => 'grn_btn' %>
			</div>
			
		</div>
	<% end %>
</div>
