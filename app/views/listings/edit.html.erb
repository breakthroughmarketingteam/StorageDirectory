<% declare_content_for %>

<div class="staticContent">
	<div id="type-one-r-col">
		<div id="type-three-r-col-in">
			<div id="sl-edit-tabs">
				<div id="sl-tabs-in" class="tabular_content">
					<h2 id="fac_name"><span><%= @listing.title %></span> - <%= @listing.map.city %>, <%= @listing.map.state %></h2>
					<ul id="sl-tabs-nav" class="tabular">
						<%= content_tag :li, link_to("Details", '#fac_details', :id => 'tab_Details', :rel => 'tab1') %>
						<%= content_tag :li, link_to("Rental Settings", '#settings', :id => 'settings', :rel => 'tab2') %>
						<%= content_tag :li, link_to("Amenities/Specials", '#fac_details', :id => 'tab_Details', :rel => 'tab3') %>
						<%= content_tag :li, link_to("Unit Sizes", '#unit-sizes', :id => 'tab_Sizes', :rel => 'unit_sizes') %>
						<%= content_tag :li, link_to("Pictures", '#fac_pictures', :id => 'tab_Pictures', :rel => 'fac_pictures') %>
						<%= content_tag :li, link_to("Reports", '#reports', :id => 'reports', :rel => 'fac_reports') %>
						<%= content_tag :li, link_to("Reviews", '#reviews', :id => 'reviews', :rel => 'reviews') %>
					</ul>
					<!-- tab content -->
					<span id="hint">Here you can change all the details for this facility.</span>
					<div id="tab1" class="tab_content">
						<div id="details" class="left">
							<%= render :partial => 'edit_detail' %>
						</div>
						<div id="flogo" class="left">
							<%= render :partial => 'logo_form' %>
						</div>
						<div id="descript" class="left">
							<% form_for @listing, :html => { :id => 'fac_desc_form' } do |f| %>
								<p class="label">Description:</p>
								
								<div class="inner">
									<p>As stated in our USSelfStorageLocator.com <a href="terms-of-use">terms of use</a> please do not enter any contact information (phone numbers, websites, email addresses, etc) in the facility description.</p>					
									<%= f.text_area :description, :class => 'required', :rows => 6 %>
								</div>
								
								<% unless @listing.siblings.empty? %>
									<span id="copy_all_desc">[<%= link_to 'Copy to all listings', copy_desc_listing_path(@listing), :title => 'Copy this description to all your other listings' %>]</span>
								<% end %>
								
								<%= f.submit 'Save Changes', :id => 'listing_desc_submit', :class => 'save' %>
								<%= ajax_loader %>
							<% end %>
						</div>
						<div id="hours" class="left">
							<p class="label">Hours:</p>
							
							<div class="inner">
								<%= render :partial => 'hours' if in_edit_mode? %>
							</div>
							
							<%= submit_tag 'Save Changes', :class => 'save', :id => 'save_hours' %>
							<%= ajax_loader %>
						</div>
					</div>
					<div id="tab2" class="tab_content">
						<% form_for @listing, :html => { :id => 'listing_extra_form' } do |f| %>
							<div id="admin_fee" class="left">
								<p class="label">Administrative Fee:</p>
								<div class="inner">
									$ <%= f.text_field :admin_fee, :size => 8, :maxlength => 6 %> &nbsp; Set your Administrative Fee amount here and it will be charged on every unit rental you make through us.<br />
								</div>
							</div>
							<div id="billing" class="left">
								<p class="label">Billing Method:</p>
								<div class="inner">
									<ul>
										<li class="radio_wrap"><span class="radio_select"><%= f.radio_button :prorated, 1, :class => 'hide' %></span> <%= f.label :prorated, 'Prorated' %></li>
										<li class="radio_wrap"><span class="radio_select"><%= f.radio_button :prorated, 0, :class => 'hide' %></span> <%= f.label :prorated, 'Fixed' %></li>
									</ul>
								</div>
							</div>
							<div id="tax" class="left">
								<p class="label">State Tax:</p>
								<div class="inner">
									<%= f.text_field :tax_rate, :size => 8, :maxlength => 5 %> % &nbsp; Set your State Tax here so it is added to every unit rental.
								</div>
							</div>
						
							<%= f.submit 'Save Changes', :class => 'save' %>
							<%= ajax_loader %>
						<% end %>
					</div>
					<div id="tab3" class="tab_content">
						<div id="features" class="uncollapse stack">
							<p class="label">Facility Amenities:</p>
							<div class="inner">
								<%= render :partial => 'features' %>
							</div>
						</div>
						<div id="specials" class="uncollapse stack">
							<p class="label">Specials:</p>
							<div class="inner">
								<%= render_hints_for :specials %>
								<p>Select one or more preset specials to make it available for this facility.</p>
								<% form_tag toggle_specials_client_path(@client) do %>
									<ul id="toggle_specials">
										<%= render :partial => PredefinedSpecial.all %>
									</ul>
								<% end %>
							</div>
						</div>
						<button id="save" type="submit" value="Upload" name="Upload" id="Upload">Save Changes</button>
					</div>
					<div id="unit_sizes" class="tab_content">
						<%= render :partial => 'sizes' unless in_mode?('show') && @listing.available_sizes.empty? %>
					</div>
					<div id="fac_pictures" class="tab_content">
						<p class="label">Facility Pictures:</p>
						<%= render :partial => 'pictures' unless in_mode?('show') && @listing.pictures.empty? %>
					</div>
					<div id="fac_reports" class="tab_content">
						<div id="leads" class="left">
							<form class="">Show:
								<select name="type" class="right_space">
									<option value="0">Lead Type</option>
									<option value="1">Rentals</option>	<option value="2">Phone Calls</option>	<option value="3">Contact Form</option>	<option value="4">Coupon</option>
								  	<option value="5">Banner Clicks</option>	<option value="9">Directions</option>
								</select> for:

								<select name="range" class="right_space">
									<option value="180">2 Years</option>
									<option value="180">1 Year</option>
									<option selected="" value="180">6 Months</option>
									<option value="90">3 Months</option>
									<option value="31">1 Month</option>
									<option value="14">2 Weeks</option>
									<option value="0">Today</option>
								</select>
							
								<div class="right"><input type="submit" value="Refine" class="button2"></div>
							</form>
							<table id="display_reports">
								<thead>
								    <tr>
							            <th class="col1"><a href="#" class="" title="Sort on Leads">Type</a></th>
							            <th class="col2"><a href="#" class="" title="Sort on Time">Time</a></th>
							            <th class="col3"><a href="#" class="" title="Sort on Name">Name</a></th>
							            <th class="col4"><a href="#" class="" title="Sort on Phone">Phone</a></th>
							            <th class="col5"><a href="#" class="" title="Sort on Email">Email</a></th>
							            <th class="col6"><a href="#" class="" title="Sort on More Info">More Info</a></th>
							        </tr>
								</thead>
								<tbody>
									<% 7.times do %>
										<tr class="">
								            <td>Phone Call</td>
								            <td>12/02/2010 at 1:24 pm</td>
								            <td>John Smith</td>
								            <td>(954) 630-6731</td>
								            <td>myemail@web.com</td>
								            <td class="miscinfo"><a href="">Voice Recording</a></td>
									    </tr>
										<tr class="alt">
								            <td>Rental</td>
								            <td>12/02/2010 at 1:24 pm</td>
								            <td>John Smith</td>
								            <td>(954) 630-6731</td>
								            <td>myemail@web.com</td>
									        <td class="miscinfo">10x10 Interior<br />First Month Free<br />$89.00<br />Climate Controlled</td>
									    </tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<div class="hide">
						<%= hidden_field_tag :client_id, @listing.client.id %>
						<%= hidden_field_tag :listing_id, @listing.id %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
