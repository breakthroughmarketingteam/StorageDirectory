				<div id="sl-tabs-in" class="tabular_content">
					<h2 id="fac_name"><span><%= @listing.title %></span> - <%= @listing.map.city %>, <%= @listing.map.state %></h2>
					<ul id="sl-tabs-nav" class="tabular">
						<%= content_tag :li, link_to("Details", '#fac_details', :id => 'tab_Details', :rel => 'tab1') %>
						<%= content_tag :li, link_to("Rental Settings", '#settings', :id => 'settings', :rel => 'tab2') %>
						<%= content_tag :li, link_to("Amenities/Specials", '#fac_details', :id => 'tab_Details', :rel => 'tab3') %>
						<%= content_tag :li, link_to("Unit Sizes", '#unit-sizes', :id => 'tab_Sizes', :rel => 'unit_sizes') %>
						<%= content_tag :li, link_to("Pictures", '#fac_pictures', :id => 'tab_Pictures', :rel => 'fac_pictures') %>
						<%= content_tag :li, link_to("Reports", '#reports', :id => 'reports', :rel => 'fac_reports') %>
						<%= content_tag :li, link_to("Reviews", '#reviews', :id => 'reviews', :rel => 'reviews') %>
					</ul>
					<!-- tab content -->
					<span id="hint">Here you can change all the details for this facility.</span>
					<div id="tab1" class="tab_content">
						<div id="details" class="left">
							<h2>Facility Details:</h2><br />
							<% form_for @listing, :html => { :id => 'fac_detail_form' } do |f| %>
								<table cellspacing="0" cellpadding="0" class="fac-details">
						            <tbody>
						                <tr>
											<td class="col_label"><%= f.label :title, 'Facility Name' %></td>
						                	<td><%= f.text_field :title, :class => 'required', :maxlength => 32 %></td>
						                </tr>
										
										<% f.fields_for :map, @listing.map do |mf| %>
						                	<tr>
							                	<td class="col_label"><%= mf.label :address %></td>
							                	<td><%= mf.text_field :address, :class => 'required', :maxlength => 32 %></td>
							                </tr>
										
							                <tr>
							                	<td class="col_label"><%= mf.label :address2 %></td>
							                	<td><%= mf.text_field :address2 %></td>
							                </tr>

							                <tr>
							                	<td class="col_label"><%= mf.label :city %></td>
							                	<td><%= mf.text_field :city, :class => 'required' %></td>
							                </tr>

							                <tr>
							                	<td class="col_label"><%= mf.label :state %></td>
							                	<td><%= mf.text_field :state, :class => 'required' %></td>
							                </tr>

							                <tr>
							               		<td class="col_label"><%= mf.label :zip, 'Zip Code' %></td>
							                	<td><%= mf.text_field :zip, :class => 'numeric_zip', :maxlength => 5 %></td>
							                </tr>
										<% end %>
										
						                <tr>
						                	<td class="col_label"><%= f.label :phone %></td>
						                	<td><%= f.text_field :phone, :class => 'numeric_phone', :maxlength => 12 %></td>
						                </tr>
										<tr>
											<td class="col_label">Tracked Number</td>
											<td>(305) 537-6952 &nbsp;<div id="tracking_num_req">Request</div></td>
										</tr>
									
										<tr>
						                	<td class="col_label"><label for="email">Email</label></td>
						                	<td>
												<div>
												<% @listing.staff_emails.each do |staff_email| %>
													<% unless staff_email.new_record? %>
														<span>
															<%= staff_email.email %> &nbsp; 
															[<%= link_to 'remove', "/ajax/destroy?model=StaffEmail&id=#{staff_email.id}", :class => 'rm_field post_link before_confirm', :title => "Delete #{staff_email.email}?" %>]
															<br />
														</span>
													<% else %>
														<% f.fields_for :staff_emails, staff_email do |sf| %>
															<%= sf.text_field :email, :id => 'facility_email', :class => 'email' %> &nbsp; [<a class="add_field" href="#">add</a>]
														<% end %>
													<% end %>
												<% end %>
												</div>
						                	</td>
						                </tr>
						            </tbody>
						        </table>
							
								<div>
									<%= f.submit 'Save Changes', :id => 'listing_detail_submit', :class => 'save' %>
									<%= ajax_loader %>
								</div>
							<% end %>
						</div>
						<div id="flogo" class="left">
							<%= render :partial => 'logo_form' %>
						</div>
						<div id="descript" class="left">
							<% form_for @listing, :html => { :id => 'fac_desc_form' } do |f| %>
								<p class="label">Description:</p>
								<div class="inner">
									<p>As stated in our USSelfStorageLocator.com <a href="terms-of-use">terms of use</a> please do not enter any contact information (phone numbers, websites, email addresses, etc) in the facility description.</p>					
									<%= f.text_area :description, :class => 'required', :rows => 6 %>
								</div>
								
								<%= f.submit 'Save Changes', :id => 'listing_desc_submit', :class => 'save' %>
								<%= ajax_loader %>
							<% end %>
						</div>
						<div id="hours" class="left">
							<p class="label">Hours:</p>
							<div class="inner">
								<%= render :partial => 'hours' if in_edit_mode? %>
							</div>
							
							<%= submit_tag 'Save Changes', :class => 'save', :id => 'save_hours' %>
