<div class="rental_form">
	<h2>Rent a Unit</h2>
	<div class="realtime">Real-Time Storage Unit Rentals</div>
	<div class="head">Use this form to rent a unit from <span><%= @listing.title %></span> and take advantage of their <span>Online Specials</span>.</div>
	
	<div id="rent_steps">
		<div class="items">
			<div id="rent_step1" class="workflow_step">
				<% form_for [listing, Rental.new], :html => { 'data-pr' => '1' } do |f| %>

					<div class="inner">
						<div class="col1">
							<div>
								<%= label_tag :unit_type, 'Type: ', :class => 'block left' %>
								<%= select_tag :unit_type, option_tags(@listing.unit_types_for_select, (size && size.title)), :class => 'required' %>
							</div>
			
							<div>
								<%= f.label :size_id, 'Size: ', :class => 'block left' %>
								<%= select_tag_for_facility_sizes_icons 'rental[size_id]', @listing.available_sizes, @search.unit_size, :class => 'required sizes_select' %>
							</div>
			
							<div><%= label_tag 'Rate: ', nil, :class => 'block left' %><span>$</span><span class="rental_rate"><%= size.dollar_price if size %></span><span>/month</span></div>
			
							<div class="calendar_wrap">
								<%= f.label :move_in_date, 'Move in: ', :class => 'block left' %><%= f.text_field :move_in_date, :value => Time.now.strftime('%m/%d/%Y'), :class => 'required cal', :maxlength => 10 %>
							</div>
			
							<div>
								<%= label_tag 'Paid until: ', nil, :class => 'block left' %><span class="paid_through"></span>
							</div>
			
							<% unless @listing.specials.empty? %>
								<div><%= label_tag 'Specials: ', nil, :class => 'block left' %>
									<ul>
										<% @listing.specials.each do |special| %>
											<li><%= f.radio_button :special_id, special.id, { 'data-special-calc' => "#{special.value}|#{special.function}#{ "|#{special.month_limit}" unless special.month_limit.blank? }" } %> <%= f.label "special_id_#{special.id}", special.title %></li>
										<% end %>
									</ul>
								</div>
							<% end %>
						</div>
	
						<div class="col2">
							<div id="size_picker">
								<%= image_tag @unit_size_icons.first.icon.url rescue 'Missing Size Icon' %>
							</div>
						</div>
	
						<div class="col3">
							<ul>
								<li>Rent: <span class="grey">(<span class="dur">2.87</span> x <span>$</span><span class="rental_rate"></span>)</span> <span class="subtotal right">$<span></span></span></li>
								<% unless listing.specials.empty? %>
									<li class="discount">Special Offer: <span class="right">-$<span></span></span></li>
								<% end %>
								<li class="admin_fee">Admin Fees: <span class="right">$<span><%= sprintf "%.2f", listing.admin_fee %></span></span></li>
								<li class="tax" data-tax="<%= listing.tax_rate %>">Tax: <span class="right">$<span></span></span></li>
								<hr />
								<li class="total">Move-In Total: <span class="right">$<span>92.56</span></span></li>
							</ul>
	
							<a href="#" class="submit_btn">Rent it!</a>
							<%= f.submit 'Rent it!', :class => 'hide' %>
						</div>
					</div>
				<% end %>
			</div>

			<div id="rent_step2" class="workflow_step">
				<h1>Customer info goes here</h1>
			</div>
		</div>

		<div id="workflow_nav">
			<a href="#back" id="back" class="button">Back</a>
			<a href="#back" id="back" class="button">Next</a>
		</div>
	</div>
</div>