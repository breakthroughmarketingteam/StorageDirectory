<div id="listing_<%= result.id %>" class="listing">
	<div class="inner">
		<div class="in">
			<div class="rslt-title">
				<h3><%= link_to result.title, facility_path(result.title.parameterize, result.id) %></h3>
			</div>

			<div class="num_icon"><%= result_index(result) %></div>
			
			<div class="facility-logo">
				<img class="logo" src="/images/ui/storagelocator/bobs-logo.gif" alt="" width="102" height="77">
			</div>
			<div class="rslt-contact">

				<p>
					<span class="rslt-address"><%= result.map.address %></span><br>
					<span class="rslt-citystate"><%= result.map.city_state_zip %></span>
				</p>
				<p>
					<span class="rslt-phone">1-800-567-4321</span>
				</p>
			</div>
			<ul>
				<li class="rslt-miles">
					<span class="shifted-text"><span><%= listing_distance(result) %></span>Miles</span>
				</li>
			
				<li class="rslt-size">
					<img src="/images/ui/storagelocator/unit_sizes/10x10.png" alt="10ft. x 10ft. Unit size " />
					<span class="size">10x10</span>	
				</li>
				
				<li class="rslt-price">
				  	<ul>
						<li>	
							Upper:<span id="upper" class="price">$49.50</span>
							<input type="checkbox" value="Upper" name="" id="unit_prices">
						</li>
						<li>	
							Drive-up:<span id="drive-up" class="price">$59.50</span>
							<input type="checkbox" value="Drive-up" name="" id="unit_prices">
						</li>
						<li>	
							Interior:<span id="interior" class="price">$89.50</span>
							<input type="checkbox" value="Interior" name="" id="unit_prices">
						</li>
					</ul>		
				</li>			
				
				<li class="rslt-reserve">
					<%= results_main_button(result) %>
				</li>
			</ul>
		</div>
		
		<div class="unit_detail">
			<%= render :partial => 'listings/unit_detail', :locals => { :listing => result } %>
		</div>
	</div>
	
	<div class="panel hidden"></div>
	
	<ul class="tabs">
		<li class="open_tab_li">
			<%= link_to '+', '#', :class => 'open_tab' %>
		</li>
		<li class="fac-map">
			<%= link_to 'Directions', result.get_partial_link(:map), :rel => 'map', :class => 'tab_link' %>
		</li>
		
		<li class="fac-sizes<%= ' hide' if result.available_sizes.empty?%>">
			<%= link_to "Sizes#{" (#{result.available_sizes.size})"}", result.get_partial_link(:sizes), :rel => 'sizes', :class => "tab_link" %>
		</li>
		
		<li class="fac-specials<%= ' hide' if result.specials.empty? %>">
			<%= link_to "Specials#{" (#{result.specials.size})"}", result.get_partial_link(:specials), :rel => 'specials', :class => "tab_link" %>
		</li>
		
		<li class="fac-pictures<%= ' hide' if result.pictures.empty? %>">
			<%= link_to "Pictures#{" (#{result.pictures.size})"}", result.get_partial_link(:pictures), :rel => 'pictures', :class => "tab_link" %>
		</li>
		
		<li class="fac-reviews<%= ' hide' if result.reviews.empty? %>">
			<%= link_to "Reviews#{" (#{result.reviews.size})"}", result.get_partial_link(:reviews), :rel => 'reviews', :class => "tab_link" %>
		</li>
	</ul>
	<div class="highlight-green progress">&nbsp;</div>
</div>
