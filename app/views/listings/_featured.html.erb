<% @featured_listing = Listing.get_featured_listing @search.results %>
<% unless @featured_listing.nil? %>
	<div id="feat-list" class="shimmy">
		<h4>Featured Listing</h4>
	
		<%= display_logo(@featured_listing, { :class => (@featured_listing.pictures.empty? ? 'full' : 'short') }) %>
	
		<% unless @featured_listing.pictures.empty? %>
			<ul id="preview">
				<li>
					<a href=""><img src="/images/ui/storagelocator/temp-images/preview1.png"></a>
				</li>
				<li>
					<a href=""><img src="/images/ui/storagelocator/temp-images/preview2.png"></a>
				</li>
				<li>
					<a href=""><img src="/images/ui/storagelocator/temp-images/preview3.png"></a>
				</li>
				<li>
					<a href=""><img src="/images/ui/storagelocator/temp-images/preview4.png"></a>
				</li>
			</ul>
		<% end %>
	
		<div id="name">
			<%= link_to @featured_listing.title, facility_path(@featured_listing.title, @featured_listing.id) %>
		</div>
	
		<div id="address">
			<%= @featured_listing.full_address %>
		</div>
	
		<% if @featured_listing.call_tracking_enabled? %>
			<div id="phone">
				<%= @featured_listing.call_tracking_num %>
			</div>
		<% end %>
	
		<div id="spec">
			<p>
				Special
			</p>
			Get the 1st Month Free! With immediate move in!
		</div>
	
		<% if (@unit_size = @featured_listing.get_closest_unit_size(@search.unit_size)) %>
			<div id="size">
				<p>
					Size
				</p>
				<%= @unit_size.dollar_price %>
			</div>
			<div id="price">
				<p>
					Price
				</p>
				<%= number_to_currency @unit_size.dollar_price %>/month
			</div>
		<% end %>
	
		<div id="more-info">
			<%= link_to 'More Info', facility_path(@featured_listing.title, @featured_listing.id), :class => 'btn', :title => "Read more about #{@featured_listing.title}" %>
		</div>
	</div>
<% end %>