<div class="admin_listing_form">
	<fieldset>
		<legend>Name &amp; Address</legend>
	
		<div class="framed">
			<div class="stack">
				<%= f.label :title, nil, :class => 'block left w100' %>
				<%= f.text_field :title, :class => 'required' %>
				<%= hidden_field_tag 'from', 'admin' %>
			</div>
	
			<div class="stack">
				<%= f.label :description, nil, :class => 'block left w100' %>
				<%= f.text_area :description, :class => 'small_textarea' %>
			</div>
	
			<div class="stack">
				<%= f.label :address, nil, :class => 'block left w100' %>
				<%= f.text_field :address, :class => 'required' %>
			</div>
	
			<div class="stack">
				<%= f.label :city, nil, :class => 'block left w100' %>
				<%= f.text_field :city, :class => 'required' %>
			</div>
	
			<div class="stack uncollapse">
				<div class="left right_space">
					<%= f.label :full_state, 'State', :class => 'block left w100' %>
					<%= f.select :full_state, States.names, :class => 'required' %>
				</div>
		
				<div class="left">
					<%= f.label :zip, nil, :class => 'block left right_space' %>
					<%= f.text_field :zip, :class => 'required tiny_text_field' %>
				</div>
			</div>
		
			<div class="stack uncollapse">
				<div class="left right_space">
					<%= display_logo @listing, :request => request %>
				</div>
				
				<div class="left">
					<%= f.label :logo, nil, :class => 'block left right_space' %>
					<%= f.file_field :logo %>
				</div>
			</div>
		</div>
	</fieldset>	

	<fieldset>
		<legend>Status &amp; Options</legend>
	
		<div class="framed shorter">
			<div class="stack uncollapse">
				<div class="left right_space stack">
					<%= f.check_box :enabled %>
					<%= f.label :enabled %>
				</div>
		
				<div class="left right_space">
					<%= f.label :status, nil, :class => 'block left w80' %>
					<%= f.text_field :status, :class => 'tiny_text_field' %>
				</div>
		
				<div class="left right_space">
					<%= f.label :user_id, nil, :class => 'block left w80' %>
					<%= f.text_field :user_id, :class => 'tiny_text_field' %>
				</div>
			</div>
	
			<div class="stack uncollapse">
				<div class="left right_space">
					<%= f.label :category, nil, :class => 'block left w80' %>
					<%= f.text_field :category, :class => 'required tiny_text_field' %>
				</div>
		
				<div class="left right_space">
					<%= f.label :storage_types, nil, :class => 'block left w80' %>
					<%= f.text_field :storage_types, :class => 'required tiny_text_field hintable', :title => 'Separate by comma' %>
				</div>
				
				<div class="left">
					<%= f.label :tracked_number, nil, :class => 'block left w80' %>
					<%= f.text_field :tracked_number, :class => 'tiny_text_field' %>
				</div>
			</div>
		</div>
	</fieldset>

	<fieldset>
		<legend>Internal Contact Info</legend>
	
		<div class="framed shorter">
			<% f.fields_for :contact, (@listing.contact || @listing.build_contact) do |cf| %>
				<div class="stack uncollapse">
					<div class="left right_space">
						<%= cf.label :first_name, nil, :class => 'block left w80' %>
						<%= cf.text_field :first_name %>
					</div>
			
					<div class="left">
						<%= cf.label :last_name, nil, :class => 'block left w80' %>
						<%= cf.text_field :last_name %>
					</div>
				</div>
		
				<div class="stack uncollapse">
					<div class="left right_space">
						<%= cf.label :title, nil, :class => 'block left w80' %>
						<%= cf.text_field :title %>
					</div>
			
					<div class="left">
						<%= cf.label :phone, nil, :class => 'block left w80' %>
						<%= cf.text_field :phone %>
					</div>
				</div>
		
				<div class="stack uncollapse">
					<div class="left right_space">
						<%= cf.label :email, nil, :class => 'block left w80' %>
						<%= cf.text_field :email %>
					</div>
			
					<div class="left">
						<%= cf.label :web_address, nil, :class => 'block left w80' %>
						<%= cf.text_field :web_address %>
					</div>
				</div>
			<% end %>
		</div>
	
	</fieldset>
</div>