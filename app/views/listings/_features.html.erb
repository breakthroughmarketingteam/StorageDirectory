<div id="sl-tabs-feat">
	<ul id="sl-tabs-feat-in">
    	<% IssnFacilityFeature.labels.each do |feature| %>
      		<li>
        		<span class="facility_feature<%= ' selected' if @listing.has_feature?(feature) %>">
          			<%= check_box_tag 'feature', feature, false, :class => 'hidden' %>
        		</span>
        		<span class="f"><%= feature %></span>
      		</li>
    	<% end %>
  	</ul>
  	<%= ajax_loader if action_name == 'edit' %>
</div>