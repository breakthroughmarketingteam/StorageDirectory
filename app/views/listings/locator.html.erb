<% declare_content_for unless request.xhr? %>

<div id="ajax_wrap_inner">
	<%= display_message flash %>

	<div id="main_map">
	</div>
	
	<div id="results_wrap">
		<div class="rslt-head-txt">
			<h2><%= locator_header %></h2>
			<p>Your nearest <%= @search.storage_type %> is being displayed first</p>
		</div>

		<div id="type-one-top-bar">
			<div id="search-head">
				<ul>
				 	<li id="list-name"><a href=""><span class="hidden">List by </span>Facility Name</a></li>
				 	<li id="list-miles"><a href=""><span class="hidden">List by </span>Miles</a></li>
				 	<li id="list-size"><span class="hidden">List by </span>Size</li>
				 	<li id="list-price"><a href=""><span class="hidden">List by </span>Price</a></li>
					<li id="list-amenities"><span class="hidden">List by </span>Amenities</li>
				</ul>
			</div>

			<div id="rslt-list-bg">
				<%= render :partial => 'listings/result', :collection => @listings %>
			</div>

			<%= render :partial => 'listings/paginator' unless @listings.blank? %>
		</div>
	</div>
</div>