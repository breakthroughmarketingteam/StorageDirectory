<% form_for Reservation.new, :html => { :id => "new_reservation_#{listing.id}", :class => 'silent new_reservation' } do |f| %>
	<div class="sl-table-exp-form-l">
		<p>
	        <%= label_tag 'reserver[first_name]', 'First Name', :class => 'block left w80' %> <%= text_field_tag 'reserver[first_name]', nil, :class => 'required' %>
		</p>
		<p>
	        <%= label_tag 'reserver[last_name]', 'Last Name', :class => 'block left w80' %> <%= text_field_tag 'reserver[last_name]', nil, :class => 'required' %>
		</p>
		
		<p>
			<% if defined?(unit_type) && unit_type %>
				<%= f.hidden_field :unit_type_id, :value => unit_type.id %>
			<% else %>
				<% if listing.available_sizes.empty? %>
					<%= label_tag 'reservation[unit_type_size]', 'Unit Size', :class => 'block left w80' %>
					<%= f.select :unit_type_size, listing.unit_sizes_options_array %>
				<% else %>
					<%= label_tag 'reservation[unit_type_id]', 'Unit Size', :class => 'block left w80' %>
					<%= f.select :unit_type_id, listing.unit_sizes_options_array %>
				<% end %>
			<% end %>
		</p>
	</div>
	<div class="sl-table-exp-form-r">
		<p>
	        <%= label_tag 'mailing_address[phone]', 'Phone', :class => 'block left w80' %> <%= text_field_tag 'mailing_address[phone]', nil, :class => 'numeric_phone', :maxlength => 12 %>
		</p>
		<p>
	        <%= label_tag 'reserver[email]', 'Email', :class => 'block left w80' %> <%= text_field_tag 'reserver[email]', nil, :class => 'email' %>
		</p>
		<p class="datepicker_wrap">
	        <span class="hidden">Move In Date</span> <%= label_tag 'reservation[move_in_date]', 'Move-In Date', :class => 'block left w80' %> <%= text_field_tag 'reservation[move_in_date]', nil, :id => "move_in_#{listing.id}", :class => 'mini_calendar numeric_date' %>
		</p>
		<div class="rental_duration">
	        <p>How many months do you plan to rent?</p>
			<ul>
				<li><%= radio_button_tag 'reservation[duration]', '1-3', true, :class => 'radio_btn' %> <%= label_tag '1 to 3' %></li>
				<li><%= radio_button_tag 'reservation[duration]', '3-6', false, :class => 'radio_btn' %> <%= label_tag '3 to 6' %></li>
				<li><%= radio_button_tag 'reservation[duration]', '6+', false, :class => 'radio_btn' %> <%= label_tag '6+' %></li>
			</ul>
		</div>
	</div>
	
	<div class="clear"></div>
	<p class="verisign">
        <span class="hidden">Verisign Secure</span>
	</p>
	<p class="right">
		<%= f.hidden_field :listing_id, :value => listing.id %>
		<%= ajax_loader %>
        <input id="submit-btn" type="submit" value="Next" name="commit" />
	</p>
<% end %>